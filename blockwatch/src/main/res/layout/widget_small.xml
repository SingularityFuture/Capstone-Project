<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_black_1000"
    android:contentDescription="@string/widget_layout"
    android:orientation="vertical"
    android:padding="4dp"
    android:windowIsTranslucent="true">

    <TextView
        android:id="@+id/widget_current_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:contentDescription="@string/widget_current_price"
        android:drawablePadding="16dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/widget_trend"
        android:layout_width="@dimen/list_icon"
        android:layout_height="@dimen/list_icon"
        android:layout_below="@id/widget_current_price"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:contentDescription="@string/blockwatch_icon"
        android:gravity="center"
        android:padding="4dp" />


    <TextView
        android:id="@+id/widget_percentage_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/widget_trend"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:contentDescription="@string/widget_percentage_change"
        android:gravity="center"
        android:nextFocusUp="@id/widget_current_price"
        android:textAlignment="center"
        android:textSize="12sp" />

</RelativeLayout>